@model Proyect.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Usuario</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Nuevo Usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdTipoDocumento" class="control-label"></label>
                    <input asp-for="IdTipoDocumento" class="form-control" placeholder="Ingrese el tipo de documento" />
                    <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NroDocumento" class="control-label"></label>
                    <input asp-for="NroDocumento" class="form-control" placeholder="Ingrese el número de documento" />
                    <span asp-validation-for="NroDocumento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nombres" class="control-label"></label>
                    <input asp-for="Nombres" class="form-control" placeholder="Ingrese el nombre del usuario" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ingrese el apellido del usuario" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" placeholder="Ingrese el celular del usuario" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdRol" class="control-label"></label>
                    <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol">
                        <option value="">Seleccione un rol</option>
                    </select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>

                <div class="form-group text-end">
                    <input type="submit" value="Crear" class="btn btn-success btn-sm" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    