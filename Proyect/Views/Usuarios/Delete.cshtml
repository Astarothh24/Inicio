@model Proyect.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Eliminar Usuario</h1>

<div class="delete-container">
    <div class="card">
        <div class="card-header text-white bg-danger">
            <h4>Eliminar Usuario</h4>
        </div>
        <div class="card-body">
            <h5>¿Estás seguro de que deseas eliminar este usuario?</h5>
            <p><strong>Nota:</strong> Esta acción no puede deshacerse.</p>

            <dl class="row">
                <!-- Tipo de Documento -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IdTipoDocumento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdTipoDocumento)
                </dd>

                <!-- Documento -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NroDocumento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NroDocumento)
                </dd>

                <!-- Nombre -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombres)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombres)
                </dd>

                <!-- Apellido -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>

                <!-- Celular -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Celular)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Celular)
                </dd>

                <!-- Correo Electrónico -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>

                <!-- Estado -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <!-- Rol -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IdRolNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRolNavigation.NomRol)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdRol" />
                <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>
