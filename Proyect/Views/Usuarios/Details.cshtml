@model Proyect.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Detalles del Usuario</h1>

<div class="details-container">
    <div class="card">
        <div class="card-header">
            <h4>Información del Usuario</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tipo de Documento</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdTipoDocumento)
                </dd>
                <dt class="col-sm-3">Documento</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NroDocumento)
                </dd>
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombres)
                </dd>
                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>
                <dt class="col-sm-3">Celular</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Celular)
                </dd>
                <dt class="col-sm-3">Correo Electrónico</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt class="col-sm-3">Rol</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRolNavigation.NomRol)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdRol" class="btn btn-primary btn-sm">Editar</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>
